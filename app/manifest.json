{
  "name": "GitHub Diff Enhancer",
  "version": "1.0.2",
  "description": "Enhance compared code pages on GitHub.",

  "manifest_version": 2,

  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },

  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["<all_urls>"],
      "js": [
        "js/content-scripts.js"
      ]
    }
  ],

  "options_page": "html/options.html",

  "permissions": [
    "storage"
  ]
}
